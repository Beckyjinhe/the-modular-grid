{
    "manifest_version": 2,
    "name": "The Modular Grid",
    "short_name": "Modular Grid",
    "author": "Roy Vanegas & Saman Tehrani",
    "version": "1.0.0",
    "version_name": "1.0",
    "minimum_chrome_version": "30",
    "default_locale": "en",
    "description": "A modular grid for web development and/or design.",
    "homepage_url": "https://github.com/code-warrior/the-modular-grid",
    "web_accessible_resources": [
        "fonts/*.woff2",
        "content/*.css"
    ],
    "offline_enabled": true,
    "incognito": "not_allowed",

    "icons": {
        "128": "img/extension-logo-128.png"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content/main.js"]
        }
    ],

    "browser_action": {
        "default_title": "Modular Grid",
        "default_icon": {
            "19": "img/extension-icon-19.png",
            "38": "img/extension-icon-38.png"
        }
    },

    "background": {
        "scripts": ["background/main.js"],
        "persistent": false
    },

    "options_page": "options/index.html",

    "commands": {
        "toggle-feature": {
            "suggested_key": {
                "default": "Ctrl+Shift+E",
                "mac": "Ctrl+Shift+E"
            },
            "description": "Enable and disable the extension"
        },
        "_execute_browser_action": {
            "suggested_key": {
                "mac": "Ctrl+Shift+E",
                "default": "Ctrl+Shift+E",
                "windows": "Alt+Shift+E",
                "linux": "Alt+Shift+E"
            }
        }
    },

    "permissions": [
        "background",
        "unlimitedStorage",
        "storage",
        "tabs",
        "activeTab",
        "http://*/",
        "https://*/",
        "*://*/*",
        "<all_urls>"
    ],

    "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'"
}
